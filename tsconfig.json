{
  "compilerOptions": {
    "outDir": "./dist",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2022"
    ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "src",
  },
  "include": [
    "src/**/*.ts"
  ],
   "exclude": [
    "node_modules",
    "dist"
  ]
}